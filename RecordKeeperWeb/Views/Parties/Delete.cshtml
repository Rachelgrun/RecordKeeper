@model RecordKeeperBizObjects.bizParty

@{
    ViewData["Title"] = "Delete";
    string errormsg = ViewBag.ErrorMessage;

}

<h1>Delete @Model.PartyName</h1>
@if(string.IsNullOrEmpty(errormsg) == false)
{
    <h3 class = "text-danger"> @ViewBag.ErrorMessage</h3>
}
else
{
    <h3>Are you sure you want to delete @Model.PartyName?</h3>
}



<div>
   
    <hr />

    
    <form asp-action="Delete">
        @Html.HiddenFor(model => model.PartyId)
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
